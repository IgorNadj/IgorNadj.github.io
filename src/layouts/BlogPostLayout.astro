---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogPostMeta from "../components/blog/BlogPostMeta.astro";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={frontmatter.title} description={frontmatter.description} />
	</head>
	<body>
		<Header />
		<main>
      <a href="/blog">‚Üê Index</a>
      <BlogPostMeta pubDate={frontmatter.pubDate} />

      <hr class="inline-blog-post-divider" />

      <h2>{frontmatter.title}</h2>
      <slot />
		</main>
		<Footer />
	</body>
</html>
